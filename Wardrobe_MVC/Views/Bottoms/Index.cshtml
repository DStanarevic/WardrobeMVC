@model IEnumerable<Wardrobe_MVC.Models.Bottom>

@{
    ViewBag.Title = "Bottoms";
}

<h2>Bottoms</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = "myClass" })
</p>

@*Foreach Loop that adds thumbnails*@
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 col">            
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>         
                    <img class="picture" src="@Html.DisplayFor(modelItem => item.Photo)" />
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BottomID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.BottomID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.BottomID })
                    </p>
                </div>         
        </div>
    }
</div>
